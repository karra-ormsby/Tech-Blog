<div class="post card ">
    <div class="card-header" id= "blog" data-id="{{blog.id}}">
        <div class="blog-title">
            {{blog.title}}
        </div>
        <div class="blog-author">
            Posted by {{blog.user.username}}
            on {{ format_date blog.date_created }}
        </div>
    </div>
    <div class="card-body">
        {{blog.content}}
    </div>
</div>

<div class="comment-card">
    {{#each commentInfo}}
    <div class="blog-cards card">
        {{!-- <div class="card-header">
        </div> --}}
        <div class="card-body">
            <div class="blog-title">
                {{comment}}
            </div>
            <div class="blog-author">
                ~ {{user.username}}, {{ format_date date_created }}
            </div>
        </div>
    </div>
    {{/each}}
</div>

<form id="new-comment">
    <div class="mb-3">
        <label for="blog-comment" class="form-label">Comment</label>
        <textarea class="form-control" id="blog-comment" rows="3"></textarea>
    </div>
    <button id="add-comment">Add Comment</button>
</form>

<script src="/js/new-comment.js"></script>