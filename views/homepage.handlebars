<section class="post row">
    {{#each blogs as |blog|}}
        <div class="col-1"></div>
        <div class="blog-cards card col-10">
            <div class="card-header" data-id="{{id}}">
                <div class="blog-title">
                    <a href="/post/{{id}}">{{title}}</a>
                </div>
                <div class="blog-author">
                    Posted by {{user.username}}
                    on {{ format_date date_created }}
                </div>
            </div>
            <div class="card-body">
                {{content}}
            </div>
        </div>
        <div class="col-1"></div>
    {{/each}}
</section>