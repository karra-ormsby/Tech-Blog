<section class="row">
    <div class="col-1"></div>
    <form id="update-post" class="col-10" data-id="{{post.id}}">
        <div class="mb-3 input">
            <label for="blog-title" class="form-label">Title</label>
            <input type="test" class="blog-title" id="blog-title" value="{{post.title}}">
        </div>
        <div class="mb-3">
            <label for="blog-content" class="form-label">Content</label>
            <textarea class="form-control" id="blog-content" rows="3">{{post.content}}</textarea>
        </div>
        <button id="update-post-button">Update</button>
        <button id="delete-post">Delete</button>
    </form>
    <div class="col-1"></div>
</section>
<script src="/js/update-post.js"></script>