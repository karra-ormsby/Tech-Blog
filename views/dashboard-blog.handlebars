<section id="new-post" data-id="{{id}}">
    <form>
        <div class="mb-3">
            <label for="blog-title" class="form-label">Title</label>
            <input type="test" class="blog-title" id="blog-title" value="{{title}}">
        </div>
        <div class="mb-3">
            <label for="blog-content" class="form-label">Content</label>
            <textarea class="form-control" id="blog-content" rows="3">{{content}}</textarea>
        </div>
        <button id="update-post">Update</button>
        <button id="delete-post">Delete</button>
    </form>
</section>

<script src="/js/update-post.js"></script>